{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "**/*.test.ts", "types", "temp"]
}
