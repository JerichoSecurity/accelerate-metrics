{
  "name": "accelerate-metrics",
  "version": "0.0.1",
  "description": "A tool to calculate Accelerate DevOps metrics",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "lint": "eslint src/**/*.ts --cache --fix",
    "format": "prettier --loglevel warn --write \"**/*.{js,ts,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbrudz/accelerate-metrics.git"
  },
  "author": "Steve Brudz",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sbrudz/accelerate-metrics/issues"
  },
  "homepage": "https://github.com/sbrudz/accelerate-metrics#readme",
  "engines": {
    "node": ">=14.4.0"
  },
  "dependencies": {
    "heroku-client": "^3.1.0",
    "luxon": "^1.24.1",
    "mathjs": "^7.0.2"
  },
  "devDependencies": {
    "@heroku-cli/typescript-api-schema": "0.0.1",
    "@types/jest": "^26.0.3",
    "@types/luxon": "^1.24.1",
    "@types/mathjs": "^6.0.5",
    "@types/node": "^14.0.14",
    "@typescript-eslint/parser": "^3.5.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.3.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
